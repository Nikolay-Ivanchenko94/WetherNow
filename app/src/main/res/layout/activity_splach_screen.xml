<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_fon"
    tools:context=".splachscreen.SplachScreen">


<com.airbnb.lottie.LottieAnimationView
    android:layout_width="wrap_content"
    android:layout_height="600dp"
    android:id="@+id/textviewsplachscreen"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintVertical_bias="0.7"
    app:lottie_rawRes="@raw/splach_screen"
    app:lottie_autoPlay="true"
    android:transitionName="logo_name"/>


    <TextView
        android:id="@+id/textviewanimation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/belleza"
        android:text="WeatherNow"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:transitionName="logo_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textviewanimation" />



</androidx.constraintlayout.widget.ConstraintLayout>