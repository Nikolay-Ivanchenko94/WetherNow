<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/weather_fon"
    android:orientation="vertical"
    tools:context=".fragment.CityWeatherFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <Button
    android:layout_width="30dp"
    android:layout_height="30dp"
        android:id="@+id/btnMap"
        android:background="@drawable/map"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageViewSunnyCloudy"
                        android:layout_width="170dp"
                        android:layout_height="170dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/textViewTomorrowDnipro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="@string/TextViewTomorrow"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="25sp" />


                        <TextView
                            android:id="@+id/textViewDegreeMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="50dp" />


                        <TextView
                            android:id="@+id/textViewMostlyCloudyMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/TextViewMostlyCloudy"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20sp" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="0.444"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewRainDnipro"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/rain" />


                        <TextView
                            android:id="@+id/textViewDegreeRain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:text="72%"
                            android:textColor="@color/white"
                            android:textSize="20sp" />


                        <TextView
                            android:id="@+id/textViewRainMainDnipro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="@string/TextViewRain"
                            android:textColor="@color/white"
                            android:textSize="20sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="0.222"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/imageViewWindy"
                            android:background="@drawable/windy"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />


                        <TextView
                            android:id="@+id/textViewWindyDegree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:textSize="17sp" />


                        <TextView
                            android:id="@+id/textViewWindyMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/TextViewWindy"
                            android:textColor="@color/white"
                            android:textSize="20sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/background"
                        android:orientation="vertical"
                        android:padding="8dp">


                        <ImageView
                            android:id="@+id/imageViewHumidityMain"
                            android:background="@drawable/humidity"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="45dp" />


                        <TextView
                            android:id="@+id/textViewHumidityDegreeMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textViewHumidityMainDnipro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/white"
                            android:text="@string/TextViewHumidity"
                            android:textSize="20sp" />





                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>




            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btn7NextDays"
                android:background="@drawable/btn7days"
                android:layout_marginTop="375dp"
                android:layout_marginLeft="360dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recylerViewFuture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="410dp"
                android:nestedScrollingEnabled="true" />



        </RelativeLayout>


    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>