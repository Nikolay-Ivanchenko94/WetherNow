<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/weather_fon"
    android:orientation="vertical"
    tools:context=".fragment.CityWeatherFragment">


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">



      <Button
          android:id="@+id/btnmap"
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:background="@drawable/map"
          tools:layout_editor_absoluteX="16dp"
          tools:layout_editor_absoluteY="16dp" />


      <ImageView
          android:id="@+id/birch"
          android:layout_width="380dp"
          android:layout_height="330dp"
          android:layout_marginTop="16dp"
          android:background="@drawable/background"
          app:layout_constraintTop_toBottomOf="@+id/btnmap"
          tools:layout_editor_absoluteX="16dp" />



      <ImageView
          android:id="@+id/ivSunnyCloudy"
          android:layout_width="170dp"
          android:layout_height="170dp"
          android:layout_marginTop="20dp"
          app:layout_constraintStart_toStartOf="@+id/btnmap"
          app:layout_constraintTop_toBottomOf="@+id/btnmap"/>


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/tvTomorow"
          android:text="Завтра"
          android:textSize="25sp"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@+id/btnmap"
          android:layout_marginTop="30dp"
          app:layout_constraintStart_toEndOf="@+id/btnmap"
          android:layout_marginLeft="260dp"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/tvDegree"
          android:text="8°"
          android:textColor="@color/white"
          android:textSize="45dp"
          app:layout_constraintTop_toBottomOf="@+id/tvTomorow"
          app:layout_constraintStart_toEndOf="@+id/tvTomorow"
          android:layout_marginLeft="280dp"/>



      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/tvStatus"
          android:text="Дощ"
          android:textColor="@color/white"
          android:textSize="20sp"
          app:layout_constraintTop_toBottomOf="@+id/tvDegree"
          android:layout_marginLeft="275dp"/>




      <ImageView
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:id="@+id/ivRain"
          android:background="@drawable/rain"
          app:layout_constraintTop_toBottomOf="@+id/tvStatus"
          android:layout_marginLeft="45dp"
          android:layout_marginTop="70dp"
          app:layout_constraintStart_toStartOf="@+id/ivSunnyCloudy"/>



      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/tvDegreeRain"
          android:text="93%"
          android:textColor="@color/white"
          android:textSize="15sp"
          app:layout_constraintTop_toBottomOf="@+id/ivRain"
          android:layout_marginLeft="65dp"
          android:layout_marginTop="10dp"/>



      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/tvRain"
          android:text="Дощ"
          android:textColor="@color/white"
          android:textSize="15sp"
          app:layout_constraintTop_toBottomOf="@+id/tvDegreeRain"
          android:layout_marginLeft="65dp"/>



      <ImageView
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:id="@+id/ivWindy"
          android:background="@drawable/windy"
          app:layout_constraintTop_toBottomOf="@+id/tvStatus"
          android:layout_marginLeft="180dp"
          app:layout_constraintStart_toStartOf="@+id/ivSunnyCloudy"
          android:layout_marginTop="70dp"/>
      
      
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/tvWindyDegree"
          android:text="55 M/C"
          android:textSize="15sp"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@+id/ivWindy"
          android:layout_marginLeft="190dp"
          android:layout_marginTop="10dp"/>


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/tvWindy"
          android:text="Вітряно"
          android:textSize="15sp"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@+id/tvWindyDegree"
          android:layout_marginLeft="190dp"/>



      <ImageView
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:id="@+id/ivHumidity"
          android:background="@drawable/humidity"
          app:layout_constraintTop_toBottomOf="@+id/tvStatus"
          android:layout_marginLeft="305dp"
          android:layout_marginTop="70dp"
          app:layout_constraintStart_toStartOf="@+id/ivSunnyCloudy"/>



      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/tvHumidityDegree"
          android:text="1%"
          android:textSize="15sp"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@+id/ivWindy"
          android:layout_marginLeft="330dp"
          android:layout_marginTop="10dp"/>


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/tvHumidity"
          android:text="Вологість"
          android:textSize="15sp"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@+id/tvHumidityDegree"
          android:layout_marginLeft="310dp"/>




         <TextView
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:id="@+id/btn7NextDays"
             android:background="@drawable/btn7days"
             app:layout_constraintTop_toBottomOf="@+id/tvHumidityDegree"
             android:layout_marginTop="75dp"
             app:layout_constraintStart_toStartOf="@+id/tvHumidityDegree"
             android:layout_marginLeft="25dp"/>



      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/rvFuture"
          app:layout_constraintTop_toBottomOf="@+id/btn7NextDays"/>













  </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>