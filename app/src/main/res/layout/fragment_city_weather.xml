<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/weather_fon"
    android:orientation="vertical"
    tools:context=".fragment.CityWeatherFragment">


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">



      <Button
          android:id="@+id/btnmap"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:background="@drawable/map"
          tools:ignore="MissingConstraints" />


      <TextView
          android:id="@+id/tvDnipro"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginStart="112dp"
          android:text="Дніпро"
          android:textColor="@color/white"
          android:textSize="25sp"
          app:layout_constraintStart_toEndOf="@+id/btnmap"
          tools:layout_editor_absoluteY="17dp"
          tools:ignore="HardcodedText" />




      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/tvSnow"
          android:text="Сніг"
          android:textSize="20sp"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@+id/tvDnipro"
          app:layout_constraintStart_toEndOf="@+id/btnmap"
          android:layout_marginStart="130dp"
          android:layout_marginTop="15dp"
          tools:ignore="HardcodedText" />



      <ImageView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:id="@+id/ivSunnyCloudy"
          app:layout_constraintTop_toBottomOf="@+id/tvSnow"
          android:layout_marginTop="10dp"
          app:layout_constraintStart_toEndOf="@+id/btnmap"
          android:layout_marginStart="75dp"
          tools:ignore="ContentDescription" />




      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/tvDate"
          android:text="2024.09.03"
          android:textSize="20sp"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@+id/ivSunnyCloudy"
          app:layout_constraintStart_toEndOf="@+id/btnmap"
          android:layout_marginTop="15dp"
          android:layout_marginStart="100dp"
          tools:ignore="HardcodedText" />



      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/tvDegree"
          android:text="10°"
          android:textSize="40dp"
          android:textColor="@color/white"
          app:layout_constraintStart_toEndOf="@+id/btnmap"
          app:layout_constraintTop_toBottomOf="@+id/tvDate"
          android:layout_marginStart="120dp"
          android:layout_marginTop="10dp"
          tools:ignore="HardcodedText,SpUsage" />


      <ImageView
          android:id="@+id/ivBirch"
          android:layout_width="390dp"
          android:layout_height="120dp"
          app:layout_constraintTop_toBottomOf="@+id/tvDegree"
          android:layout_marginTop="15dp"
          android:background="@drawable/background"
          tools:ignore="ContentDescription,MissingConstraints"
          tools:layout_editor_absoluteX="10dp"/>


      <ImageView
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:id="@+id/ivRain"
          android:background="@drawable/rain"
          app:layout_constraintTop_toBottomOf="@+id/tvDegree"
          android:layout_marginTop="30dp"
          tools:ignore="ContentDescription,MissingConstraints"
          app:layout_constraintStart_toEndOf="@+id/btnmap"/>


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/tvDegreeRain"
          android:text="22%"
          android:textColor="@color/white"
          android:textSize="20sp"
          app:layout_constraintTop_toBottomOf="@+id/ivRain"
          android:layout_marginTop="5dp"
          app:layout_constraintStart_toEndOf="@+id/btnmap"
          android:layout_marginStart="3dp"
          tools:ignore="HardcodedText" />



      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/tvRain"
          android:text="Rain"
          android:textSize="18sp"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@+id/tvDegreeRain"
          app:layout_constraintStart_toEndOf="@id/btnmap"
          tools:ignore="HardcodedText" />




      <ImageView
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:id="@+id/ivWindy"
          app:layout_constraintTop_toBottomOf="@+id/tvDegree"
          android:background="@drawable/windy"
          android:layout_marginTop="30dp"
          app:layout_constraintStart_toEndOf="@+id/btnmap"
          android:layout_marginStart="145dp"
          tools:ignore="ContentDescription" />


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/tvWindyDegree"
          android:text="3 M/C"
          android:textSize="19sp"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@id/ivWindy"
          app:layout_constraintStart_toEndOf="@+id/btnmap"
          android:layout_marginStart="140dp"
          android:layout_marginTop="5dp"
          tools:ignore="HardcodedText" />




      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/tvWindy"
          android:text="Windy"
          android:textColor="@color/white"
          android:textSize="18sp"
          app:layout_constraintTop_toBottomOf="@+id/tvWindyDegree"
          app:layout_constraintStart_toEndOf="@+id/btnmap"
          android:layout_marginStart="135dp"
          tools:ignore="HardcodedText" />



      <ImageView
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:id="@+id/ivHumidity"
          app:layout_constraintTop_toBottomOf="@+id/tvDegree"
          android:background="@drawable/humidity"
          android:layout_marginTop="30dp"
          app:layout_constraintStart_toEndOf="@+id/ivWindy"
          android:layout_marginStart="115dp"
          tools:ignore="ContentDescription" />




      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/tvHumidityDegree"
          android:text="15%"
          android:textSize="20sp"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@+id/ivHumidity"
          android:layout_marginTop="5dp"
          app:layout_constraintStart_toEndOf="@+id/ivWindy"
          android:layout_marginStart="110dp"
          tools:ignore="HardcodedText" />



      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/tvHumidity"
          android:text="Humidity"
          android:textSize="18sp"
          android:textColor="@color/white"
          app:layout_constraintTop_toBottomOf="@+id/tvHumidityDegree"
          app:layout_constraintStart_toEndOf="@+id/ivWindy"
          android:layout_marginStart="90dp"
          tools:ignore="HardcodedText" />



      <Button
          android:id="@+id/btn7NextDays"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginStart="280dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/btn7days"
          app:layout_constraintStart_toEndOf="@+id/tvRain"
          app:layout_constraintTop_toBottomOf="@+id/ivBirch" />


          <androidx.recyclerview.widget.RecyclerView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/rvHourly"
              app:layout_constraintTop_toBottomOf="@+id/ivBirch"
              android:layout_marginTop="40dp"/>




  </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>