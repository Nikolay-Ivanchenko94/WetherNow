<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_fon"
    tools:context=".activities.ActivityMainDnipro">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                
                <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/BtnGeolocation"
                    android:textColor="@color/white"
                    android:background="@drawable/icon_geolocation"
                    android:layout_marginTop="10dp"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewDnipro"
                    android:hint="@string/TextViewDnipro"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    android:textColorHint="@color/white"
                    android:gravity="center"/>

            </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/TextViewSunnyDnipro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cloudy"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:textSize="25sp" />



            <ImageView
                android:id="@+id/imageviewcloudy"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="130dp"/>


            <TextView
                android:id="@+id/TextViewSaturdayDnipro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2024.28.02"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />



            <TextView
                android:id="@+id/TextViewDegreeDnipro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6,9°"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_turquoise"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="0.333"
                    android:orientation="vertical">
                    
                    
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageviewraindnipro"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/rain"/>


                    <TextView
                        android:id="@+id/textviewdegreednipro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:text="72%"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textviewraindnipro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="Осадки"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="0.333"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageviewwindydnipro"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/windy" />


                    <TextView
                        android:id="@+id/textviewdegreewindydnipro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="3 M/C"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/textviewwindydnipro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Вітер"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="0.333"
                    android:orientation="vertical">



                    <ImageView
                        android:id="@+id/imageviewhumidity"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/humidity" />


                    <TextView
                        android:id="@+id/textviewdegreehumiditydnipro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:text="79%"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/textviewhumiditydnipro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:text="Волгість"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="20sp" />


                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">


<Button
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:id="@+id/btnnext7days"
    android:background="@drawable/btnnext7days"
    android:layout_marginLeft="340dp"
    android:layout_marginTop="10dp"/>


            </RelativeLayout>


        </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:id="@+id/recyclerview"/>



        </LinearLayout>



    </ScrollView>
    
    
</androidx.constraintlayout.widget.ConstraintLayout>